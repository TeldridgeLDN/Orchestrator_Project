{
  "$schema": "https://orchestrator.ai/schemas/design-review-v1.json",
  "version": "1.0.0",
  "template": "marketing-site",
  "enabled": true,
  "description": "Design review configuration for portfolio-redesign marketing site",
  
  "extends": [
    "../../.claude/design-review/templates/marketing-site.json"
  ],
  
  "project": {
    "name": "portfolio-redesign",
    "type": "marketing-site",
    "framework": "astro",
    "description": "Pre-launch landing page and lead magnet funnel",
    "targetAudience": "Early-stage founders, SMBs testing ideas via landing pages"
  },
  
  "checks": {
    "accessibility": {
      "enabled": true,
      "wcagLevel": "AA",
      "blockOnCritical": false,
      "rules": [
        "color-contrast",
        "alt-text",
        "aria-attributes",
        "keyboard-navigation",
        "form-labels",
        "link-text"
      ]
    },
    
    "visualRegression": {
      "enabled": true,
      "threshold": 0.1,
      "createBaseline": true,
      "captureViewports": [
        { "width": 375, "height": 667, "name": "mobile" },
        { "width": 768, "height": 1024, "name": "tablet" },
        { "width": 1280, "height": 720, "name": "desktop" },
        { "width": 1920, "height": 1080, "name": "wide" }
      ],
      "ignoreRegions": [
        { "selector": "[data-timestamp]", "reason": "Dynamic timestamps" }
      ]
    },
    
    "designConsistency": {
      "enabled": true,
      "rules": [
        "naming-conventions",
        "file-organization",
        "design-token-usage"
      ]
    },
    
    "conversionOptimization": {
      "enabled": true,
      "rules": [
        "cta-above-fold",
        "form-field-count",
        "loading-time",
        "mobile-cta-accessibility"
      ],
      "thresholds": {
        "loadTime": 3000,
        "maxFormFields": 1,
        "minCtaSize": { "width": 140, "height": 48 },
        "ctaMinContrast": 4.5
      },
      "severity": {
        "cta-below-fold": "critical",
        "slow-loading": "serious",
        "too-many-fields": "warning"
      }
    },
    
    "copyQuality": {
      "enabled": true,
      "rules": [
        "readability-score",
        "jargon-detection",
        "action-oriented-ctas",
        "headline-clarity"
      ],
      "thresholds": {
        "fleschKincaid": 65,
        "maxJargonWords": 3,
        "minHeadlineWords": 5,
        "maxHeadlineWords": 10
      },
      "jargonList": [
        "leverage",
        "synergy",
        "paradigm",
        "optimize",
        "utilize",
        "implement",
        "facilitate",
        "revolutionary",
        "cutting-edge",
        "proprietary",
        "framework"
      ]
    },
    
    "trustSignals": {
      "enabled": true,
      "rules": [
        "testimonials-have-names",
        "testimonials-have-photos",
        "privacy-policy-linked",
        "no-fake-urgency",
        "social-proof-present",
        "secure-badges"
      ],
      "requirements": {
        "minTestimonials": 3,
        "testimonialMustHave": ["name", "company"],
        "requiredLinks": ["privacy-policy"]
      },
      "fakeUrgencyPatterns": [
        "only \\d+ spots? left",
        "expires in \\d+ (minutes?|hours?)",
        "limited time offer",
        "almost sold out",
        "\\d+ people watching"
      ],
      "severity": {
        "no-privacy-policy": "critical",
        "fake-urgency": "critical",
        "missing-testimonials": "warning"
      }
    },
    
    "emailTemplates": {
      "enabled": false,
      "note": "Enable when email templates are implemented"
    }
  },
  
  "designSystem": {
    "name": "Monzo-Inspired Portfolio Design",
    "version": "1.0.0",
    
    "colorPalette": {
      "primary": {
        "value": "#0EBAC5",
        "name": "Monzo Teal",
        "usage": "Primary CTA backgrounds, links, focus states"
      },
      "secondary": {
        "value": "#FF5454",
        "name": "Warm Coral",
        "usage": "Primary button backgrounds, important highlights"
      },
      "accent": {
        "value": "#FFC700",
        "name": "Sunny Yellow",
        "usage": "Success states, micro-interactions"
      },
      "neutrals": {
        "white": "#FFFFFF",
        "lightGray": "#F5F5F5",
        "charcoal": "#333333",
        "mediumGray": "#666666"
      },
      "validation": {
        "tolerance": 5,
        "mode": "strict",
        "enforceInComponents": true
      }
    },
    
    "typography": {
      "fontFamilies": {
        "headings": {
          "family": "Inter",
          "weight": "700",
          "source": "Google Fonts"
        },
        "body": {
          "family": "Inter",
          "weight": "400",
          "source": "Google Fonts"
        },
        "code": {
          "family": "JetBrains Mono",
          "weight": "400",
          "source": "Google Fonts"
        }
      },
      "sizes": {
        "h1": { "size": "48px", "lineHeight": "1.2", "mobile": "36px" },
        "h2": { "size": "36px", "lineHeight": "1.2", "mobile": "28px" },
        "h3": { "size": "24px", "lineHeight": "1.3", "mobile": "20px" },
        "body": { "size": "18px", "lineHeight": "1.6", "mobile": "16px" },
        "small": { "size": "14px", "lineHeight": "1.5", "mobile": "13px" }
      },
      "validation": {
        "enforceHierarchy": true,
        "maxSizeVariance": "4px",
        "checkLineHeight": true
      }
    },
    
    "components": {
      "button": {
        "primary": {
          "background": "#FF5454",
          "color": "#FFFFFF",
          "borderRadius": "8px",
          "padding": "16px 32px",
          "fontWeight": "600",
          "fontSize": "18px",
          "minHeight": "48px",
          "hoverEffect": "lift-shadow",
          "hoverTransform": "translateY(-2px)",
          "hoverShadow": "0 4px 12px rgba(255, 84, 84, 0.3)"
        },
        "secondary": {
          "background": "#FFFFFF",
          "color": "#0EBAC5",
          "border": "2px solid #0EBAC5",
          "borderRadius": "8px",
          "padding": "14px 30px",
          "fontWeight": "600",
          "fontSize": "18px",
          "minHeight": "48px",
          "hoverEffect": "background-fill",
          "hoverBackground": "#0EBAC5",
          "hoverColor": "#FFFFFF"
        },
        "validation": {
          "minTouchTarget": "44px",
          "maxPerPage": 3,
          "enforceAccessibility": true
        }
      },
      
      "input": {
        "border": "2px solid #E0E0E0",
        "focusBorder": "2px solid #0EBAC5",
        "borderRadius": "8px",
        "padding": "16px",
        "fontSize": "16px",
        "minHeight": "48px",
        "validation": {
          "showValidationAnimation": true,
          "focusColorRequired": "#0EBAC5",
          "errorColor": "#FF5454"
        }
      },
      
      "card": {
        "background": "#FFFFFF",
        "border": "1px solid #E0E0E0",
        "borderRadius": "12px",
        "padding": "24px",
        "shadow": "0 2px 8px rgba(0, 0, 0, 0.05)",
        "hoverEffect": "lift-shadow",
        "hoverShadow": "0 4px 16px rgba(0, 0, 0, 0.1)"
      },
      
      "testimonial": {
        "background": "#FFFFFF",
        "border": "1px solid #E0E0E0",
        "borderRadius": "12px",
        "padding": "24px",
        "authorPhotoSize": "48px",
        "validation": {
          "requireName": true,
          "requireCompany": true,
          "requirePhoto": false
        }
      }
    },
    
    "spacing": {
      "baseUnit": 8,
      "scale": [8, 16, 24, 32, 40, 48, 64, 80, 96, 128],
      "validation": {
        "enforceScale": true,
        "tolerance": 2
      }
    },
    
    "breakpoints": {
      "mobile": 375,
      "mobileLarge": 425,
      "tablet": 768,
      "desktop": 1024,
      "wide": 1440,
      "ultraWide": 1920
    },
    
    "animations": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "default": "cubic-bezier(0.4, 0, 0.2, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      }
    }
  },
  
  "devServer": {
    "autoDetect": true,
    "defaultUrl": "http://localhost:4321",
    "startupTimeout": 30000,
    "healthCheckPath": "/validate/",
    "retries": 3
  },
  
  "reporting": {
    "format": "markdown",
    "mode": "warn",
    "includeScreenshots": true,
    "includeRecommendations": true,
    "groupByCategory": true,
    "outputPath": ".claude/reports/design-review",
    "severity": {
      "critical": {
        "action": "warn",
        "color": "red",
        "emoji": "üî¥"
      },
      "serious": {
        "action": "warn",
        "color": "orange",
        "emoji": "‚ö†Ô∏è "
      },
      "warning": {
        "action": "info",
        "color": "yellow",
        "emoji": "‚ö°"
      },
      "suggestion": {
        "action": "info",
        "color": "blue",
        "emoji": "üí°"
      }
    }
  },
  
  "performance": {
    "parallel": true,
    "maxConcurrency": 3,
    "timeout": 30000,
    "retries": 2
  },
  
  "monzoPrinciples": {
    "magicMoments": {
      "description": "Delightful micro-interactions throughout user journey",
      "validatedBy": ["conversion-check", "design-consistency"]
    },
    "thoughtfulFriction": {
      "description": "Intentionally slow users down at key decisions",
      "validatedBy": ["conversion-check", "trust-signals"]
    },
    "straightforwardKindness": {
      "description": "Clear, jargon-free communication",
      "validatedBy": ["copy-quality", "accessibility"]
    },
    "consistency": {
      "description": "Predictable patterns build trust",
      "validatedBy": ["design-consistency", "visual-regression"]
    },
    "agileScalable": {
      "description": "Modular, domain-driven design",
      "validatedBy": ["design-consistency"]
    }
  },
  
  "metadata": {
    "created": "2025-11-19",
    "lastModified": "2025-11-19",
    "author": "Orchestrator Design Review System",
    "projectGoals": [
      "Convert early-stage founders",
      "Capture 400+ emails/month",
      "40%+ opt-in rate",
      "10% consultation booking rate"
    ],
    "keyPages": [
      "Landing Page (Hero, Social Proof, Form, FAQ)",
      "Checklist Download Page",
      "Consultation Booking Page"
    ]
  }
}

